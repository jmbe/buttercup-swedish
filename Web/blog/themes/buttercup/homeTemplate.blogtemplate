<body class="blue">
    <div id="blogPageWrapper">
        <div id="navbarWrapper">
            <ul class="navbarList">
                <li class="navbarItemHome">
					<a href="/" accesskey="H" title="Home">Home</a>
				</li>
                <li class="navbarItemAbout">
					<a href="/aboutUs.html" accesskey="A" title="About Us">About Us</a>
				</li>
                <li class="navbarItemUserGuide">
					<a href="/userGuide.html" accesskey="G" title="User Guide">User Guide</a>
				</li>
                <li class="navbarItemFeedback">
					<a href="mailto:feedback@buttercupreader.net?subject=ButtercupReader%20Feedback"
							accesskey="F" title="Feedback">
						Feedback
					</a>
				</li>
				<li class="navbarItemBlog">
					<a href="/blog" accesskey="B" title="Blog" class="current">Blog</a>
				</li>
            </ul>
        </div>
		<div id="blogContentWrapper">
			<a class="logo" href="/" accesskey="H" title="Buttercup Logo (Link to Home)"></a>
			<span class="subTitle">
            The Online Digital Talking Book Reader (Demo)</span>
			    
            <hr class="mainHeadingDivider" />
			
			<div id="fauxRightColumn">
				
				<div id="rssSubscribe"><a href="<%rssurl()%>" title="Subscribe">Subscribe</a></div>
				
				<hr class="subHeadingDivider" />
				<h2 class="navigationHeader">Search</h2>
				<!-- Modified search function instead of using the built in search macro, as we want to modify the button style/content -->
				
				<script type="text/javascript"> 
				<!--
					function doSearch(searchString)
						{
							// Trim string.
							searchString = searchString.replace(/^\s+|\s+$/g, "");
							if (searchString.length > 0)
							{
								location.href = "/blog/SearchView.aspx?q=" + encodeURIComponent(searchString);
							}
						 
							return false;
						}
				-->
				</script>
				
				<div class="searchContainerStyle">
					<input id="searchString" onkeypress="javascript:if (event.keyCode == 13) { doSearch(searchString.value); return false; }" type="text" class="searchTextBoxStyle" />
					<input name="_ctl17:searchButton" type="button" id="_ctl17_searchButton" onclick="doSearch(searchString.value);" class="searchButtonStyle" title="Search" />
				</div>

				<hr class="subHeadingDivider" />
				<h2 class="navigationHeader">Categories</h2>
				<p><%newtelligence.drawCategories()%></p>
				<hr class="subHeadingDivider" />
				<h2 class="navigationHeader">Archive</h2>
				<p><%newtelligence.drawArchiveMonths()%></p>
				<hr class="subHeadingDivider" />
				<div><%newtelligence.logoutBox ()%></div>
			</div>
			<div id="contentColumn">
			<!--//end #fauxRightColumn//-->
				<h1 class="blogHeading">Blog</h1>
				
				<hr class="subHeadingDivider" />
				
				<%newtelligence.adminBar()%>
				<% DrawCategoryPaging() %> 
				<%bodytext%>
				<div class="post-paging">
					<div class="previous-posts">
						<% DrawPostPagingPrevious() %>
					</div>
					<div class="next-posts">
						<% DrawPostPagingNext() %>
					</div>
				</div>
			</div>
			
			<hr class="mainHeadingDivider" />
			<div id="blogFooter" class="clear">
				&copy; Copyright <%year%>, <%authorName%>.
			</div>
		</div>
		<!--//end #contentWrapper//-->
	</div>

<script type="text/javascript">
