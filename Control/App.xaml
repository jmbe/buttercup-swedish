					<Canvas Height="12.509" Width="19.532">
						<Path Width="7.59906" Height="12.509" Canvas.Left="12" Canvas.Top="0" Stretch="Fill"
							  Fill="{TemplateBinding Foreground}"
							  Data="F1 M 11.7721,0L 19.3712,6.25L 11.7721,12.509L 11.7721,0 Z "/>
						<Path Width="7.59773" Height="12.509" Canvas.Left="0.228" Canvas.Top="0" Stretch="Fill"
							  Fill="{TemplateBinding Foreground}"
							  Data="F1 M 7.59773,12.509L 0,6.25775L 7.59773,0L 7.59773,12.509 Z "/>
					</Canvas>
				</Border>
				<Border x:Name="focusItem" Width="32" Height="32" CornerRadius="16"
						Opacity="0" Background="{TemplateBinding FocusBackground}">
					<Canvas Height="12.509" Width="19.532">
						<Path Width="7.59906" Height="12.509" Canvas.Left="12" Canvas.Top="0" Stretch="Fill"
							  Fill="{TemplateBinding FocusForeground}"
							  Data="F1 M 11.7721,0L 19.3712,6.25L 11.7721,12.509L 11.7721,0 Z "/>
						<Path Width="7.59773" Height="12.509" Canvas.Left="0.228" Canvas.Top="0" Stretch="Fill"
							  Fill="{TemplateBinding FocusForeground}"
							  Data="F1 M 7.59773,12.509L 0,6.25775L 7.59773,0L 7.59773,12.509 Z "/>
					</Canvas>
				</Border>
				<Border x:Name="selectedItem" Width="28" Height="28" CornerRadius="16"
						Opacity="0" Background="{TemplateBinding SelectionBackground}">
					<Canvas Height="12.509" Width="19.532">
						<Path Width="7.59906" Height="12.509" Canvas.Left="12" Canvas.Top="0" Stretch="Fill"
							  Fill="{TemplateBinding SelectionForeground}"
							  Data="F1 M 11.7721,0L 19.3712,6.25L 11.7721,12.509L 11.7721,0 Z "/>
						<Path Width="7.59773" Height="12.509" Canvas.Left="0.228" Canvas.Top="0" Stretch="Fill"
							  Fill="{TemplateBinding SelectionForeground}"
							  Data="F1 M 7.59773,12.509L 0,6.25775L 7.59773,0L 7.59773,12.509 Z "/>
					</Canvas>
				</Border>
				<Rectangle x:Name="disableOverlay" Fill="{TemplateBinding Background}" Opacity="0" />
			</Grid>
		</ControlTemplate>

