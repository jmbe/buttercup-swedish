								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="normalItem"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0.0" />
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="focusItem"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0.0" />
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="selectedItem"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="1.0" />
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="selectedItem"
                                        Storyboard.TargetProperty="Width"
                                    	To="28" />
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="selectedItem"
                                        Storyboard.TargetProperty="Height"
                                    	To="28" />
							</Storyboard>
						</vsm:VisualState>
						<vsm:VisualState x:Name="Disabled">
							<Storyboard>
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="disableOverlay"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0.33" />
							</Storyboard>
						</vsm:VisualState>
					</vsm:VisualStateGroup>
				</vsm:VisualStateManager.VisualStateGroups>


				<Border x:Name="normalItem" Width="28" Height="28" CornerRadius="16" BorderThickness="1.5"
						Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding Foreground}"
