			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="basics:TabControl">
						<ContentPresenter x:Name="ContentTop" Margin="0"  />
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="PanelItem" TargetType="basics:TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="basics:TabItem">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="3"
                                CornerRadius="12" >
                            <ContentPresenter x:Name="ContentTop" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

		<Style x:Key="SubPanelItem" TargetType="basics:TabItem">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="basics:TabItem">
						<Border Background="{x:Null}" BorderBrush="{x:Null}">
							<ContentPresenter x:Name="ContentTop" />
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		
		<Style x:Key="DefaultTextBox" TargetType="bc:MediaTextBox">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="bc:MediaTextBox">
						<Grid x:Name="RootElement">
							<vsm:VisualStateManager.VisualStateGroups>
								<vsm:VisualStateGroup x:Name="FocusStates">
									<vsm:VisualState x:Name="Unfocused"/>
									<vsm:VisualState x:Name="Focused">
										<Storyboard>
											<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="UnselectedFrame"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0" />
											<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="FocusFrame"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="1" />
										</Storyboard>
									</vsm:VisualState>
								</vsm:VisualStateGroup>
								<vsm:VisualStateGroup x:Name="CommonStates">
									<vsm:VisualState x:Name="Normal"/>
									<vsm:VisualState x:Name="Disabled">
										<Storyboard>
											<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="UnselectedFrame"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0.33" />
											<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="FocusFrame"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0" />
										</Storyboard>
									</vsm:VisualState>
									<vsm:VisualState x:Name="Readonly">
										<Storyboard>
											<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="UnselectedFrame"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0.33" />
											<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="FocusFrame"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0" />
										</Storyboard>
									</vsm:VisualState>
								</vsm:VisualStateGroup>
							</vsm:VisualStateManager.VisualStateGroups>
							
							<Border x:Name="UnselectedFrame" BorderThickness="1.5" CornerRadius="3"
									BorderBrush="{TemplateBinding Foreground}" />
							<Border x:Name="FocusFrame" BorderThickness="1.5" CornerRadius="3" Opacity="0"
									BorderBrush="{TemplateBinding FocusForeground}" />
							<ScrollViewer x:Name="ContentElement" Margin="4" Style="{StaticResource DefaultScrollViewer}"
									Background="{TemplateBinding Background}" Foreground="{TemplateBinding Foreground}"
									IsTabStop="False"/>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
	</Application.Resources>
</Application>
