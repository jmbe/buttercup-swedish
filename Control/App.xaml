		<LinearGradientBrush x:Key="YellowGradientLR" StartPoint="0,0.5" EndPoint="1,0.5">
			<LinearGradientBrush.GradientStops>
				<GradientStop Color="#FF9900" Offset="0"/>
				<GradientStop Color="#FFBF00" Offset="0.328042"/>
				<GradientStop Color="#FFE500" Offset="1"/>
			</LinearGradientBrush.GradientStops>
		</LinearGradientBrush>

		<Style x:Key="PanelHeading" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,40,8" />
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

		<Style x:Key="PopupHeading" TargetType="TextBlock">
			<Setter Property="Margin" Value="0,0,48,0" />
			<Setter Property="FontSize" Value="16" />
			<Setter Property="FontWeight" Value="Bold" />
		</Style>

		<Style x:Key="SplashHeading" TargetType="TextBlock">
			<Setter Property="Margin" Value="52,16,0,0" />
			<Setter Property="FontSize" Value="24" />
			<Setter Property="TextWrapping" Value="Wrap" />
		</Style>
		
		<Style x:Key="SplashText" TargetType="TextBlock">
			<Setter Property="Margin" Value="52,0,0,0" />
			<Setter Property="FontSize" Value="16" />
			<Setter Property="TextWrapping" Value="Wrap" />
		</Style>

		<Style x:Key="HorizontalSeparator" TargetType="Rectangle">
			<Setter Property="Height" Value="2" />
			<Setter Property="Margin" Value="0,8,0,8" />
			<Setter Property="Opacity" Value="0.5" />
		</Style>
		
		<Style x:Key="SectionFrame" TargetType="Border">
			<Setter Property="CornerRadius" Value="12" />
			<Setter Property="BorderThickness" Value="3" />
			<Setter Property="Padding" Value="8" />
		</Style>
		
		
        <ControlTemplate x:Key="DefButtonTemplate" TargetType="bc:MediaButton">
            <Grid>
                <vsm:VisualStateManager.VisualStateGroups>
                    <vsm:VisualStateGroup x:Name="FocusStates">
                        <vsm:VisualState x:Name="Unfocused"/>
                        <vsm:VisualState x:Name="Focused">
                            <Storyboard>
                                <DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="buttonFocusArea"
                                        Storyboard.TargetProperty="(Border.Opacity)"
                                    	To="1" />
                            </Storyboard>
                        </vsm:VisualState>
                    </vsm:VisualStateGroup>
                    <vsm:VisualStateGroup x:Name="CommonStates">
                        <vsm:VisualStateGroup.Transitions>
                            <vsm:VisualTransition From="Normal" To="MouseOver"
                                    GeneratedDuration="00:00:00.2000000" />
							<vsm:VisualTransition From="MouseOver" To="Normal"
                                    GeneratedDuration="00:00:00.2000000" />
							<vsm:VisualTransition From="MouseOver" To="Pressed"
                                    GeneratedDuration="00:00:00.2000000" />
                            <vsm:VisualTransition From="Pressed" To="MouseOver"
                                    GeneratedDuration="00:00:00.2000000" />
                        </vsm:VisualStateGroup.Transitions>
						<vsm:VisualState x:Name="Normal"/>
						<vsm:VisualState x:Name="MouseOver">
                            <Storyboard>
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="buttonFaceArea"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0.0" />
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="buttonFocusArea"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0.0" />
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="buttonSelectedArea"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="1.0" />
							</Storyboard>
                        </vsm:VisualState>
                        <vsm:VisualState x:Name="Pressed">
                            <Storyboard>
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="buttonFaceArea"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0.0" />
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="buttonFocusArea"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0.0" />
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="buttonSelectedArea"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="1.0" />
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="buttonSelectedArea"
                                        Storyboard.TargetProperty="Width"
                                    	To="36" />
								<DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="buttonSelectedArea"
                                        Storyboard.TargetProperty="Height"
                                    	To="36" />
							</Storyboard>
                        </vsm:VisualState>
                        <vsm:VisualState x:Name="Disabled">
                            <Storyboard>
                                <DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="contentPresenter"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0.33" />
                                <DoubleAnimation BeginTime="00:00:00" Duration="00:00:00.0010000"
                                        Storyboard.TargetName="buttonFaceArea"
                                        Storyboard.TargetProperty="(UIElement.Opacity)"
                                    	To="0.33" />
                            </Storyboard>
                        </vsm:VisualState>
                    </vsm:VisualStateGroup>
                </vsm:VisualStateManager.VisualStateGroups>

				<Border x:Name="buttonFaceArea" Margin="2" CornerRadius="3"
                        Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding Foreground}"
                        BorderThickness="1.5">
				</Border>
				<Border x:Name="buttonFocusArea" Margin="2" CornerRadius="3" Opacity="0"
                        Background="{TemplateBinding FocusBackground}" BorderBrush="{x:Null}"
                        BorderThickness="0">
				</Border>
				<Border x:Name="buttonSelectedArea" Margin="2" CornerRadius="3" Opacity="0"
                        Background="{TemplateBinding SelectionBackground}" BorderBrush="{x:Null}"
                        BorderThickness="0">
				</Border>
				<ContentPresenter x:Name="contentPresenter" Margin="4" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
								  />
				<!--Border x:Name="buttonFocusDecorator" Margin="0" CornerRadius="3" 
                        Background="{x:Null}" Opacity="0.0" BorderThickness="4"
                        BorderBrush="{TemplateBinding Foreground}">
                    <Border Margin="-2.75" BorderThickness="1.5" CornerRadius="3" Background="{x:Null}"
                            BorderBrush="{TemplateBinding SelectionBackground}" >
                    </Border>
                </Border-->
            </Grid>
        </ControlTemplate>

