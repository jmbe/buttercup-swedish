		<Style x:Key="defaultListItem" TargetType="bc:ExtendedListBoxItem">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="bc:ExtendedListBoxItem">
						<Grid>
							<vsm:VisualStateManager.VisualStateGroups>
								<vsm:VisualStateGroup x:Name="SelectionStates">
									<vsm:VisualState x:Name="Unselected"/>
									<vsm:VisualState x:Name="Selected">
										<Storyboard>
											<DoubleAnimation
                                                    Duration="00:00:00.0010000"
                                                    Storyboard.TargetName="shadeArea"
                                                    Storyboard.TargetProperty="Opacity" To="1.0" />
										</Storyboard>
									</vsm:VisualState>
								</vsm:VisualStateGroup>
							</vsm:VisualStateManager.VisualStateGroups>

							<Border BorderThickness="0" Background="{TemplateBinding Background}" >
								<Grid>
									<Border x:Name="shadeArea" Opacity="0.0" CornerRadius="2"
                                          Background="{TemplateBinding SelectionBackground}" />
									<ContentPresenter VerticalAlignment="Center"
													  Margin="4,0,4,0"
                                                      Content="{TemplateBinding Content}" />
								</Grid>
							</Border>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
