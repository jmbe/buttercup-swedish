<UserControl x:Class="Buttercup.Control.BookInfoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	GotFocus="ControlGotFocus" LostFocus="ControlLostFocus"
	VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
    
    <Grid x:Name="LayoutRoot">
        <Border x:Name="mainFrame" BorderThickness="2" CornerRadius="4" Padding="2"
				MinHeight="64" VerticalAlignment="Top"
				BorderBrush="{Binding Path=DefaultForeground}">
        <StackPanel Margin="5">
            <!-- These buttons will need to get their text from localisation -->
            <TextBlock x:Name="BookInfoTitle" Margin="5"></TextBlock>
            <TextBlock x:Name="BookInfoCreator" Margin="5"></TextBlock>
            <TextBlock x:Name="BookInfoPublisher" Margin="5"></TextBlock>
            <TextBlock x:Name="BookInfoLanguage" Margin="5"></TextBlock>
            <TextBlock x:Name="BookInfoDate" Margin="5"></TextBlock>
            <TextBlock x:Name="BookInfoPages" Margin="5"></TextBlock>
            <TextBlock x:Name="BookInfoHeadingLevels" Margin="5"></TextBlock>
            <TextBlock x:Name="BookInfoMultimediaType" Margin="5"></TextBlock>
            <TextBlock x:Name="BookInfoMultimediaContent" Margin="5"></TextBlock>
            <TextBlock x:Name="BookInfoTotalTime" Margin="5"></TextBlock>
        </StackPanel>
        </Border>
    </Grid>
</UserControl>
